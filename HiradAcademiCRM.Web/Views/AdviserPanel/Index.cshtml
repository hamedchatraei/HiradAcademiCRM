    List<InformationUnRegisteredFollowUpViewModel> unRegisteredFollowUp = _callService.ShowUnRegisteredFollowUp(adviserId).Where(f=>f.UnregisteredFollowUpId != 1).ToList();
    List<InformationFollowUpViewModel> followUp = _callService.ShowFollowUp(adviserId).Where(f=>f.FollowUpId != 1).ToList();
    List<AllFollowUpViewModel> allFollowUps = new List<AllFollowUpViewModel>();

    foreach (var followUpViewModel in followUp)
    {
        AllFollowUpViewModel newAllFollowUps = new AllFollowUpViewModel()
                {
                    Id = followUpViewModel.FollowUpId,
                    StudentId = followUpViewModel.StudentId,
                    StudentNameFamily = followUpViewModel.StudentNameFamily,
                    FollowUpDateTime = followUpViewModel.FollowUpDateTime,
                    Subject = followUpViewModel.Subject,
                    IsFollowedUp = followUpViewModel.IsFollowedUp,
                    Description = followUpViewModel.Description,
                    IsRegister = true
                };

        allFollowUps.Add(newAllFollowUps);
    }

    foreach (var unRegisteredFollowUpViewModel in unRegisteredFollowUp)
    {
        AllFollowUpViewModel newAllFollowUps = new AllFollowUpViewModel()
                {
                    Id = unRegisteredFollowUpViewModel.UnregisteredFollowUpId,
                    StudentId = unRegisteredFollowUpViewModel.StudentId,
                    StudentNameFamily = unRegisteredFollowUpViewModel.StudentNameFamily,
                    FollowUpDateTime = unRegisteredFollowUpViewModel.FollowUpDateTime,
                    Subject = unRegisteredFollowUpViewModel.Subject,
                    IsFollowedUp = unRegisteredFollowUpViewModel.IsFollowedUp,
                    Description = unRegisteredFollowUpViewModel.Description,
                    IsRegister = false
                };

        allFollowUps.Add(newAllFollowUps);
    }

    allFollowUps = allFollowUps.Where(a => a.IsFollowedUp == false && a.FollowUpDateTime.Date == DateTime.Now.Date).ToList();

    var registeredCalls = _callService.ShowCall(adviserId);
    var unRegisteredCalls = _callService.ShowUnRegisteredCall(adviserId);
    List<AllCallsViewModel> allCalls = new List<AllCallsViewModel>();

    foreach (var registeredCall in registeredCalls)
    {
        AllCallsViewModel newAllCall = new AllCallsViewModel()
        {
            CallId = registeredCall.CallId,
            AdviserId = registeredCall.AdviserId,
            StudentId = registeredCall.StudentId,
            StudentNameFamily = registeredCall.StudentNameFamily,
            CallDate = registeredCall.CallDate,
            CallTime = registeredCall.CallTime,
            Subject = registeredCall.Subject,
            Description = registeredCall.Description,
            IsCall = registeredCall.IsCall,
            IsRegister = true
        };

        allCalls.Add(newAllCall);
    }

    foreach (var unRegisteredCall in unRegisteredCalls)
    {
        AllCallsViewModel newAllCall = new AllCallsViewModel()
        {
            CallId = unRegisteredCall.UnregisteredCallsId,
            AdviserId = unRegisteredCall.AdviserId,
            StudentId = unRegisteredCall.StudentId,
            StudentNameFamily = unRegisteredCall.StudentNameFamily,
            CallDate = unRegisteredCall.CallDate,
            CallTime = unRegisteredCall.CallTime,
            Subject = unRegisteredCall.Subject,
            Description = unRegisteredCall.Description,
            IsCall = unRegisteredCall.IsCall,
            IsRegister = false
        };

        allCalls.Add(newAllCall);
    }

    allCalls = allCalls.Where(a => a.CallDate.Date == DateTime.Now.Date).ToList();
