<!-- Customers List Start -->
<div id="tableAdvisers" class="row">
    <div class="col-12 mb-5">
        <div class="card mb-2 bg-transparent no-shadow d-none d-lg-block">
            <div class="row g-0 sh-3">
                <div class="col">
                    <div class="card-body pt-0 pb-0 h-100">
                        <div class="row g-0 h-100 align-content-center">
                            <div class="col-6 col-lg-1 d-flex align-items-center text-alternate text-medium text-muted text-small">مشاور</div>
                            <div class="col-6 col-lg-1 d-flex align-items-center text-alternate text-medium text-muted text-small">دانش آموز</div>
                            <div class="col-6 col-lg-2 d-flex align-items-center text-alternate text-medium text-muted text-small">تاریخ قسط</div>
                            <div class="col-6 col-lg-2 d-flex align-items-center text-alternate text-medium text-muted text-small">مبلغ</div>
                            <div class="col-6 col-lg-2 d-flex align-items-center text-alternate text-medium text-muted text-small">توضیحات</div>
                            <div class="col-6 col-lg-2 d-flex align-items-center text-alternate text-medium text-muted text-small">وضعیت</div>
                            <div class="col-6 col-lg-2 d-flex align-items-center text-alternate text-medium text-muted text-small">دستورات</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="checkboxTable" class="installment-container">
            @foreach (var items in Model.InformationInstallment)
            {

                <div class="card mb-2">
                    <div class="card-body pt-0 pb-0 sh-30 sh-lg-8">

                        <div class="row g-0 h-100 align-content-center">
                            <div class="col-6 col-lg-1 d-flex flex-column justify-content-center mb-2 mb-lg-0 order-3 order-lg-2">
                                <div class="text-muted text-small d-lg-none">Name</div>
                                <a href="/AdviserPanel/AdviserDetail/@items.AdviserId">@items.AdviserNameFamily</a>
                            </div>
                            <div class="col-6 col-lg-1 d-flex flex-column justify-content-center mb-2 mb-lg-0 order-3 order-lg-2">
                                <div class="text-muted text-small d-lg-none">Name</div>
