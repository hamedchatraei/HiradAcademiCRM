                                </div>
                            </div>
                            <div class="col-6 col-lg-2 d-flex flex-column justify-content-center mb-2 mb-lg-0 order-5 order-lg-3">
                                <div class="text-muted text-small d-lg-none"></div>
                                <div class="text-alternate">
                                    @items.Description
                                </div>
                            </div>
                            <div class="col-6 col-lg-2 d-flex flex-column justify-content-center mb-2 mb-lg-0 order-5 order-lg-3">
                                <div class="text-muted text-small d-lg-none"></div>
                                @if (items.IsPayed)
                                {
                                    <span class="badge rounded-pill bg-outline-primary">پرداخت شده</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-outline-tertiary">پرداخت نشده</span>
                                }
                            </div>
                            <div class="col-6 col-lg-2 d-flex flex-column justify-content-center mb-2 mb-lg-0 order-5 order-lg-3">
                                <div class="icon-center row d-flex justify-content-evenly col-auto">
                                    <a href="/AdviserPanel/EditInstallment/@items.InstallmentId" class="edit-salary btn btn-outline-primary btn-icon" style="border-radius: 50%; width: 2.5rem; height: 2.5rem;padding: 0">
                                        <i data-cs-icon="pen"></i>
                                    </a>
                                    <button data-id="@items.InstallmentId" class="delete-installment btn btn-outline-danger btn-icon" style="border-radius: 50%; width: 2.5rem; height: 2.5rem;padding: 0" data-bs-toggle="modal" data-bs-target="#DeleteInstallmentModal">
                                        <i data-cs-icon="bin"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
            <!-- Pagination Start -->
                        
            <partial name="_PaginationPages"/>

            <!-- Pagination End -->
        </div>
    </div>
</div>
<!-- Customers List End -->
</div>
<!-- Modal Delete Installment Start-->
<div class="modal fade" id="DeleteInstallmentModal" tabindex="-1" aria-labelledby="DeleteInstallmentModalLabelDefault" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteInstallmentModalLabelDefault">حذف چک</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <!-- <i data-cs-icon="close"></i> -->
                </button>
            </div>
            <div class="modal-body">
                آیا از حذف این قسط اطمینان دارید ؟!
                <input type="hidden" id="modalDeleteReceivedId" value=""/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-danger" onclick="DeleteInstallment()">حذف</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Delete Installment End-->
</main>
</div>

<script type="text/javascript">
    jQuery(document).ready(function($) {
        $('input[type=datetime]').datepicker({ dateFormat: "yy/mm/dd", isRTL: true, showButtonPanel: true , changeMonth: true,
            changeYear: true });
    });
</script>

<script>
    jQuery(document).ready(function($) {

        const body = $("body");

        const pagination = [
            { selector : '.pagination a#aPage', pageId : 'this' },
            { selector : '.pagination a#aFirstPage', pageId :'1' },
            { selector : '.pagination a#aPreviousPage', pageId : Number($('#currentPage').text()) - 1 },
            { selector : '.pagination a#aNextPage', pageId : Number($('#currentPage').text()) + 1 },
            { selector : '.pagination a#aLastPage', pageId :  $('#pageCount').text() }
        ];

        for (let page of pagination) {

            body.on('click', page.selector, function (e) {

                e.preventDefault();
                let pageId = page.pageId === 'this' ? $(this).text() : page.pageId;
                initAjaxFilterData(event ,pageId);

            }); }

        function initAjaxFilterData(event ,pageID) {
            args = {
                'ajax_url': "@Url.Action("ShowInstallments")",
                'find': '.installment-container',
                'data': {
                    'filterAdviser': $('#sAdviser').val(),
                    'studentFamily': $('#txtStudentFamily').val(),
                    'installmentDate': $('#txtDate').val(),
                    'fromDate': $('#txtFDate').val(),
                    'toDate': $('#txtTDate').val(),
                    'fromAmount': $('#txtFromAmount').val(),
                    'toAmount': $('#txtToAmount').val()
                },
            };
            if (typeof pageID != 'undefined') {
                args.data.pageId = pageID;
            }

            $(document.body).trigger('run_ajax_filter', [args]);
        }

        $(".form-control").on('input', initAjaxFilterData);

        $('#ui-datepicker-div').on('click','.ui-datepicker-calendar td a',initAjaxFilterData);

        $('#sAdviser').select2();

        $(document).on("click", ".delete-installment", function () {
            var installmentId = $(this).data('id');
            $(".modal-body #modalDeleteReceivedId").val(installmentId);
        });
    });

    function DeleteInstallment() {
        var id = $('#modalDeleteReceivedId').val();
        $.ajax({
            url: "/AdviserPanel/DeleteInstallment/" + id,
            data: {
                id : id
            },
            type: "Get"
        }).done(function (result) {
            location.replace("/AdviserPanel/ShowInstallments/");
        });
    }
</script>

